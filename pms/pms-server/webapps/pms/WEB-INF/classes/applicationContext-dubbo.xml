<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	 http://code.alibabatech.com/schema/dubbo	http://code.alibabatech.com/schema/dubbo/dubbo.xsd"
       default-lazy-init="true">

    <description>Dubbo provider配置</description>

	<dubbo:consumer check="false" />

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="pms-server-center"/>

    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <!-- 注册到这里 -->
	<dubbo:registry protocol="zookeeper" address="${dubbo.registry.address}"/>
	
	<!-- 用dubbo协议在20800端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="30000" dispather="all" threadpool="cached" threads="500"/>
    <dubbo:service interface="com.hjgj.permissions.api.IPermissionsApi" ref="permissionsApiImpl"
                   version="1.0"  owner="alm"/>
 
    <!-- 和本地bean一样实现服务 -->
    <bean id="permissionsApiImpl" class="com.hjgj.permissions.api.imp.PermissionsApiImpl"/>

    <!-- 调用dubbo接口 -->
   <!--  <dubbo:reference id="pmsBaseApiService" interface="com.hjgj.permissions.api.IpmsBaseApiService"
                     check="false" version="1.0"  registry="zookeeperClient"  protocol="dubbo" timeout="15000"/> -->
                     
                     
</beans>
