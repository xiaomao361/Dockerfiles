<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p [%t] [%c] - %m%n" />
		</layout>
	</appender>
	<appender name="dailyRolling" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/applogs/pms-server/pms.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-d{yyyy-MM-dd HH\:mm\:ss} %-5p 
		[%t] [%c] - %m%n" />
		</layout>
	</appender>
	<!-- 打印sql语句 -->
	<category name="java.sql">
		<priority value="debug" />
	</category>
	<category name="com.ibatis">
		<priority value="error" />
	</category>
	<logger name="org">
		<level value="ERROR" />
	</logger>
	<logger name="net">
		<level value="ERROR" />
	</logger>
	<category name="com.hjgj" additivity="false">
		<priority value="INFO" />
		<appender-ref ref="dailyRolling" />
	</category>
	<root>
		<level value="ERROR" />
		<appender-ref ref="console" />
		<appender-ref ref="dailyRolling" />
	</root>
</log4j:configuration>
